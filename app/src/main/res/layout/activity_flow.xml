        android:gravity="center"
        android:text="围棋少年"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvD"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:padding="2dp"

        android:background="@drawable/btn_bg_normal"
        android:gravity="center"
        android:text="杰克"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvE"
        android:layout_width="0dp"
