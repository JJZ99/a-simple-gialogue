<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flowRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnConstraintLayout.FlowActivity">
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tvA,tvB,tvC,tvD,tvE,tvF,tvG,tvH,tvI,tvJ,tvK,tvL,tvM,tvN,tvO,tvP,tvR"
        app:flow_horizontalGap="5dp"
        app:flow_verticalGap="3dp"
        app:flow_wrapMode="chain"
        app:flow_horizontalStyle="packed"
        app:flow_horizontalBias="0"
        app:flow_verticalAlign="top"
        app:flow_maxElementsWrap="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvA"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:gravity="center"
        android:text="初代"
        android:background="@drawable/btn_bg_normal"

        android:textColor="#ffffff"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvB"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:padding="2dp"

        android:background="@drawable/btn_bg_normal"
        android:gravity="center"
        android:text="漩涡鸣人"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvC"
        android:layout_width="0dp"
